<UserControl
    x:Class="ManagerUI.Views.ExportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ManagerUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="320"
    d:DesignWidth="560"
    FontFamily="{DynamicResource Inter}"
    FontSize="13"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/ManagerUI;component/Resources/ResourcesDictionary.xaml" />
    </UserControl.Resources>
    <DockPanel Margin="16" Background="Transparent">
        <Button
            HorizontalAlignment="Right"
            Command="{Binding BackCommand}"
            Content="Back"
            DockPanel.Dock="Bottom"
            Style="{DynamicResource Button_Secondary}" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Label
                Margin="0,0,0,14"
                HorizontalAlignment="Center"
                Content="Export model to"
                Foreground="{DynamicResource Colors/Neutral/800}" />
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ExportToNewCommand}" Style="{DynamicResource Button_Primary}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            SnapsToDevicePixels="True"
                            Source="/Images/plus-medium.png" />
                        <Label
                            VerticalAlignment="Center"
                            Content="New Project"
                            Foreground="White" />
                    </StackPanel>

                </Button>
                <Button
                    Margin="8,0,0,0"
                    Command="{Binding ExportToExistingCommand}"
                    Style="{DynamicResource Button_Primary}">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="16" Source="/Images/document-file-blank.png" />
                        <Label
                            VerticalAlignment="Center"
                            Content="Existing Project"
                            Foreground="White" />
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
