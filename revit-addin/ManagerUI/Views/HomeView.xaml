                    VerticalAlignment="Center"
                    Foreground="{StaticResource Colors/Neutral/600}"
                    Text="{Binding CurrentVersion, StringFormat='Version {0}', Mode=OneTime}"
                    Visibility="{Binding Updated, Converter={StaticResource BoolToVisibility}}" />
